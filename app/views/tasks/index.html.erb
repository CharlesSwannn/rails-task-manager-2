<h1>All of your tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <%= link_to task_path(task), style:'text-decoration: none;' do %>
      <% if task.completed %>
        <% value = link_to "X",uncomplete_task_path(task), data: { turbo_method: :post }, style: "text-decoration:none" %>
      <% else %>
        <% value = link_to " ",complete_task_path(task), data: { turbo_method: :post }, style: "text-decoration:none" %>
      <% end %>
      <li>[<%= value %>] - <%= link_to task.title, task_path(task) %></li>
      <%=  %>
    <% end %>
  <% end %>
</ul>

<%= link_to  "Create a new task", new_task_path %>
